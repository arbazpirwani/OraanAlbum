<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/appointment_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"

        android:src="@drawable/stroke_circle"
        android:tint="@color/shimmer_placeholder" />

    <TextView
        android:id="@+id/appointment"
        style="@style/ListTextView"
        android:layout_width="200dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@id/appointment_image"
        android:background="@drawable/color_background_radius"
        android:gravity="center"
        android:padding="0dp" />

    <TextView
        android:id="@+id/services"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/appointment"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/appointment_image"
        android:background="@drawable/color_background_radius"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp" />


</RelativeLayout>
