<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">
    <RelativeLayout
            android:id="@+id/profile_picture_layout"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="14dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content">
        <View
                android:id="@+id/letter_view_background"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/stroke_circle"/>

        <TextView
                android:id="@+id/letter_view_text"
                android:layout_width="wrap_content"
                android:textSize="26sp"
                android:text="A"
                android:textColor="#bbffffff"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>

    </RelativeLayout>


    <TextView
            android:id="@+id/user_name"
            android:text="HEllO"
            style="@style/bold_text_view_style"/>

    <TextView
            android:id="@+id/email"
            android:text="HEllO"
            style="@style/light_text_view_style"/>

</RelativeLayout>
