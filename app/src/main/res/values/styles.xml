<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato_regular</item>

    </style>

    <style name="AppTheme.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!--Base Theme Styling Starts-->
    <style name="MainLayoutBaseTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="splash_logo_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:contentDescription">@string/logo_description</item>
    </style>

    <style name="ListTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Item Views Service List Style Starts-->
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@drawable/line</item>
    </style>
    <style name="bold_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_toEndOf">@id/profile_picture_layout</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="light_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/user_name</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_toEndOf">@id/profile_picture_layout</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
